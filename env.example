# Supabase (opcional)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# MySQL Database Configuration
# Para Railway, usar DATABASE_URL (se genera automáticamente)
DATABASE_URL=mysql://user:password@localhost:3306/cmms_biomedico

# O configurar individualmente:
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=cmms_biomedico

# Backend API (opcional - dejar vacío para usar Next.js API routes)
# BACKEND_URL=http://localhost:8000/api
# NEXT_PUBLIC_API_URL=http://localhost:8000/api
# API_URL=http://localhost:8000/api

# JWT Secret para autenticación (REQUERIDO)
JWT_SECRET=tu-secreto-super-seguro-de-al-menos-32-caracteres

# Analytics
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# App Environment
NODE_ENV=production
